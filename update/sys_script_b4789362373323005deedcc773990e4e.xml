        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	//name=incident^element=work_notes^element_id=bb6842c9f0252300964feeefe80ff008
	var ji = new x_303301_jira_inte.JiraIntegration();

	ji.debug('Jira - New Work Note');
	try {
		var grT = new GlideRecord(current.name);
		if (grT.get(current.element_id)) {
			if (!gs.nil(grT.correlation_id) &&
				grT.correlation_display == 'Jira') {
				var oComment = {};
				oComment.body = current.value.replace('[code]','').replace('[/code]','');
				var oData = ji._callREST('rest/api/2/issue/' + grT.correlation_id + '/comment', 'post', JSON.stringify(oComment),'');
				ji.debug(JSON.stringify(oData));
			}
		}
	} catch(ex) {
		ji.debug('business rule failed Jira - New Work Note: ' + ex);
	} finally {
		ji.sendToLog();
	}
})(current, previous);
]]></script>
